<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_buttom_navigation_view"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.axel.reproductorenkotlin.ui.view.ExploreFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/toSongsFragment"
            app:destination="@id/songsFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.axel.reproductorenkotlin.ui.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.axel.reproductorenkotlin.ui.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.axel.reproductorenkotlin.ui.view.LibraryFragment"
        android:label="LibraryFragment"
        tools:layout="@layout/fragment_library">
        <action
            android:id="@+id/toSongsFragment"
            app:destination="@id/songsFragment" />
    </fragment>
    <fragment
        android:id="@+id/songsFragment"
        android:name="com.axel.reproductorenkotlin.ui.view.SongsFragment"
        android:label="fragment_songs"
        tools:layout="@layout/fragment_songs" >
        <argument
            android:name="idPlaylist"
            app:argType="string"
            android:defaultValue='""' />
    </fragment>
</navigation>