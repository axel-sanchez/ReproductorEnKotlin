<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnMinimizar"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/abajorelleno"
                    android:onClick="listDeReproduccion"
                    android:textColor="#353333" />

            <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:gravity="bottom|center"
                    android:textColor="#353333"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"/>

            <Button
                    android:id="@+id/btnLista"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mas"
                    android:textColor="#353333" />
        </LinearLayout>

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="30dp"
                app:srcCompat="@drawable/castleonthehill" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/container"
            android:layout_width="375dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="113dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txtMinuto"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/minuto"
                android:textColor="#353333" />

        <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progress="0" />

        <TextView
                android:id="@+id/txtDuracion"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#353333" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="480dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

        <Button
                android:id="@+id/btnAnterior"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/anteriorgris"
                android:contentDescription="@string/app_name"
                android:onClick="anterior" />

        <Button
                android:id="@+id/btnDetener"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/stop"
                android:contentDescription="@string/app_name"
                android:onClick="detener" />

        <Button
                android:id="@+id/btnPlayPause"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/playy"
                android:contentDescription="@string/app_name"
                android:onClick="playPause" />

        <Button
                android:id="@+id/btnRepetir"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/repeticion"
                android:contentDescription="@string/app_name"
                android:onClick="repetir" />

        <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/siguientegris"
                android:contentDescription="@string/app_name"
                android:onClick="siguiente" />

    </LinearLayout>

</RelativeLayout>